pipeline{
    agent any
    triggers {
        pollSCM("* * * * *")
    }
    stages{
        stage("deliverToDockerHub") {
            steps {
                echo "delivering to docker hub (coming soon)"
                
            }
        }

        stage("start docker containers"){
            steps{
                echo "========starting up docker environment========"
                sh "docker-compose -f ./docker-compose.yml up -d"
            }
        }

        stage ("run"){
            steps{
                echo "========Run========"
                sh "dotnet run --project MassasoftApi/MassasoftApi.csproj"
            }
        }
    }
    post {
        cleanup {
            echo "cleaning up the docker environment"
            sh script: "docker-compose -f ./docker-compose.yml down", returnStatus:true
        }
    }
}