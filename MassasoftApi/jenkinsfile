pipeline{
    agent any
    triggers {
        pollSCM("* * * * *")
    }
    stages{
        

        stage("Start Docker Containers") {
            steps {
                echo "======== Starting up docker environment ========"
                sh "docker-compose -f MassasoftApi/docker-compose.yml up -d"
            }
        }

        stage('Run k6 Tests') {
            steps {
            script {
                docker.image('loadimpact/k6').inside('-v path/to/k6/scripts:/scripts') {
                sh 'k6 run /scripts/k6-script.js'
                }
            }
        }
    }
    post {
        cleanup {
            echo "cleaning up the docker environment"
            sh script: "docker-compose -f DevOpsExamApi/docker-compose.yml down", returnStatus:true
        }
    }
}
