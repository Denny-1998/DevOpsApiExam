pipeline{
    agent any
    triggers {
        pollSCM("* * * * *")
    }
    stages{
        
        
        stage("start docker containers"){
            steps{
                echo "========starting up docker environment========"
                sh "docker-compose -f DevOpsExamApi/docker-compose.yml up -d"
            }
        }
/*        
        stage ("run"){
            steps{
                echo "========Run========"
                sh "dotnet run --project DevOpsExamApiTest/DevOpsExamApiTest.csproj"
            }
        }
        
        stage('Migrate') {
            steps {
                sh 'docker run --rm --network="host" -v "$(pwd)/db/migrations:/flyway/sql" flyway/flyway:7.15.0 -user=massasoftuser -password=password -url=jdbc:mysql://localhost:3306/DevOpsExam -locations=filesystem:/flyway/sql migrate'
            }
        }
        */
    }
    post {
        cleanup {
            echo "cleaning up the docker environment"
            sh script: "docker-compose -f DevOpsExamApi/docker-compose.yml down", returnStatus:true
        }
    }
}